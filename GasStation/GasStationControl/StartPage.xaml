<Page x:Class="GasStationControl.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GasStationControl"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="390"
      FontSize="24"
      Title="StartPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <TextBlock Text="ID заправки: " Margin="10 0 0 0" VerticalAlignment="Center"/>
                <TextBox Name="TBStationID" Width="120" Height="40"></TextBox>
            </StackPanel>
            <Button Name="LoadDataBtn" Click="LoadDataBtn_Click" Width="400" Height="40" Margin="10 0 0 0" Content="Загрузить данные"/>
        </StackPanel>
    </Grid>
</Page>
